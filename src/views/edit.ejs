    <header>
        <div class="d-flex align-items-center p-3 border-bottom shadow">
            <h5 class="my-0 mr-md-auto font-weight-normal">
                <span style="color: var(--pallete_6); font-weight: 900;">CONTROLE</span>
                de Estudantes |
            </h5>
        </div>
    </header>







    <!-- MODAL EDITAR ALUNO -->

    <div class="edit-box">
        <h2>Editar informações do aluno</h2>
        <form action="/editarAluno/<%= aluno.IDAluno %>" method="post" enctype="multipart/form-data">
            <div class="max-width">
                <div class="image-container">
                    <img src="/img/<%= aluno.Foto %>" alt="Selecione uma imagem" id="imgFoto">
                </div>
                <input type="file" id="flImage" name="foto" accept="image/*">
            </div>
            <div class="user-box">
                <label>Nome</label>
                <input type="text" value="<%= aluno.Nome %>" name="nome">
            </div>
            <div class="user-box">
                <label>Idade</label>
                <input type="text" value="<%= aluno.Idade %>" name="idade">
            </div>
            <div class="user-box">
                <label>Sexo</label>
                <input type="text" value="<%= aluno.Sexo %>" name="sexo">
            </div>
            <div class="user-box">
                <label>Sala</label>
                <select id="sala" name="sala">
                    <% for (let i=0; i<salas.length; i++) { %>
                        <option value='<%= salas[i].IDSala %>' <%=aluno.IDSala==salas[i].IDSala ? 'selected' : '' %>>
                            <%= salas[i].Nome %>
                        </option>
                        <% } %>
                </select>
            </div>
            <input class="btn btn-primary" type="submit" value="Atualizar" />
        </form>
    </div>


